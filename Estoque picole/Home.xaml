<Page
    x:Class="Estoque_picole.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Estoque_picole"
    mc:Ignorable="d" 
    d:DesignHeight="1080" d:DesignWidth="1920"
    Title="Home"
    Background="#FFF0F0F0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel Grid.Row="0" Margin="0,40,0,40">
            <TextBlock Text="🍧 Fábrica de Picolés"
                       FontSize="60"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Sistema de Controle de Estoque"
                       FontSize="26"
                       Foreground="#555"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Menu de botões -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400">

            <Button x:Name="btnCadastro" Content="📦 Cadastro de Picolés"
                    Height="70"
                    FontSize="26"
                    Background="#5AAFE4"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Margin="0,0,0,20"
                    Click="btnCadastro_Click_1"/>

            <Button x:Name="btnRelatorios" Content="📊 Relatórios"
                    Height="70"
                    FontSize="26"
                    Background="#A17DE0"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Margin="0,0,0,20"
                    Click="btnRelatorios_Click"/>

            <Button x:Name="btnEstoque" Content="📋 Ver Estoque"
                    Height="70"
                    FontSize="26"
                    Background="#8FD26D"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Margin="0,0,0,20"
                    Click="btnEstoque_Click"/>

            <Button x:Name="btnSair" Content="❌ Sair"
                    Height="70"
                    FontSize="26"
                    Background="#EF5350"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="btnSair_Click"/>
        </StackPanel>
    </Grid>
</Page>
