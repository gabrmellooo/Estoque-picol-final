<Page x:Class="Estoque_picole.Relatorio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Estoque_picole"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Relatorio"
      Background="#FFF0F0F0">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Margin="0,0,0,20" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnExcluir"
        Content="Excluir Produto"
        Width="220"
        Height="60"
        Background="#FFEE4B2B"
        Foreground="White"
        FontSize="24"
        FontWeight="Bold"
        HorizontalAlignment="Center"
        Margin="0,441,0,-421"
        Click="btnExcluir_Click"/>


            <Button x:Name="btnVoltar"
                    Content="⟵ Voltar"
                    Width="180"
                    Height="60"
                    Background="#FF73D673"
                    Foreground="White"
                    FontSize="24"
                    FontWeight="Bold"
                    BorderThickness="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="btnVoltar_Click"/>

            <TextBlock Grid.Column="1"
                       Text="Controle de Estoque de Picolés"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="#223244"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>


        <DataGrid x:Name="dgEstoque"
                  CellEditEnding="dgEstoque_CellEditEnding"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  FontSize="24"
                  RowHeight="50"
                  Margin="0,0,0,120" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="2*"/>
                <DataGridTextColumn Header="Sabor" Binding="{Binding Sabor}" Width="*"/>
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="*"/>
                <DataGridTextColumn Header="Preço" Binding="{Binding Preco}" Width="*"/>
                <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal}" Width="*"/>
                <DataGridTextColumn Header="Validade" Binding="{Binding Validade, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
            <TextBlock Text="Total de Itens:" FontSize="28" FontWeight="Bold" Foreground="#223244" Margin="0,0,20,0"/>
            <TextBlock x:Name="txtTotalItens" FontSize="28" FontWeight="Bold" Foreground="#223244" Margin="0,0,40,0"/>
            <TextBlock Text="Valor Total em Estoque:" FontSize="28" FontWeight="Bold" Foreground="#223244" Margin="0,0,20,0"/>
            <TextBlock x:Name="txtValorTotal" FontSize="28" FontWeight="Bold" Foreground="#223244"/>
        </StackPanel>


        <StackPanel Grid.Row="3">
            <TextBlock Text="Histórico de Alterações"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#223244"
                       Margin="0,10,0,20"/>

            <DataGrid x:Name="dgHistorico"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      FontSize="22"
                      RowHeight="45">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Produto" Binding="{Binding Produto}" Width="2*"/>
                    <DataGridTextColumn Header="De" Binding="{Binding QuantidadeAntiga}" Width="*"/>
                    <DataGridTextColumn Header="Para" Binding="{Binding QuantidadeNova}" Width="*"/>
                    <DataGridTextColumn Header="Data da Alteração" Binding="{Binding DataAlteracao, StringFormat={}{0:dd/MM/yyyy HH:mm:ss}}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
