<Page x:Class="Estoque_picole.Estoque"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Estoque_picole"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Estoque">

    <Grid Background="#f4f4f4">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="750">

            <!-- Título -->
            <TextBlock Text="📦 Controle de Estoque"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel Margin="0,60,0,0">
                <!-- Barra de busca -->
                <DockPanel Margin="0,0,0,15" VerticalAlignment="Center">
                    <TextBlock Text="Buscar:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontWeight="Bold"
                               Foreground="#444"/>
                    <TextBox x:Name="txtBusca" Width="300" Height="28" Margin="0,0,10,0"
                             VerticalContentAlignment="Center"
                             ToolTip="Digite um nome ou sabor para buscar"/>
                    <Button x:Name="btnBuscar" Content="Buscar" Width="100" 
                            Background="#5AA9E6" Foreground="White"/>
                </DockPanel>

                <!-- Tabela de Estoque -->
                <DataGrid x:Name="dgEstoque"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Height="300"
                          BorderBrush="#DDD"
                          Background="White"
                          AlternatingRowBackground="#F9F9F9"
                          Margin="0,0,0,15">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="Sabor" Binding="{Binding Sabor}" Width="150"/>
                        <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
                        <DataGridTextColumn Header="Preço" Binding="{Binding Preco}" Width="100" />
                        <DataGridTextColumn Header="Validade" Binding="{Binding Validade, StringFormat=\{0:dd/MM/yyyy\}}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Botões -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnAtualizar" Content="🔄 Atualizar" Width="110" Margin="5"
                            Background="#5AA9E6" Foreground="White"/>
                    <Button x:Name="btnExcluir" Content="🗑 Excluir Selecionado" Width="160" Margin="5"
                            Background="#E65A5A" Foreground="White"/>
                    <Button x:Name="btnVoltar" Content="↩ Voltar" Width="100" Margin="5"
                            Background="#73D673" Foreground="White" Click="btnVoltar_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
