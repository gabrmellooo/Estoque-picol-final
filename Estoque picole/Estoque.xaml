<Page x:Class="Estoque_picole.Estoque"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Estoque_picole"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Estoque">

    <Grid Background="#f4f4f4">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="750">

            <!-- Título -->
            <TextBlock Text="📦 Controle de Estoque"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel Margin="0,60,0,0">
                <!-- Tabela de Estoque -->
                <DataGrid x:Name="dgEstoque"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          Height="300"
                          BorderBrush="#DDD"
                          Background="White"
                          AlternatingRowBackground="#F9F9F9"
                          Margin="0,0,0,15"
                          CellEditEnding="dgEstoque_CellEditEnding">



                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="Sabor" Binding="{Binding Sabor}" Width="150"/>
                        <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
                        <DataGridTextColumn Header="Preço" Binding="{Binding Preco}" Width="100" />
                        <DataGridTextColumn Header="Validade" Binding="{Binding Validade, StringFormat=\{0:dd/MM/yyyy\}}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Botões -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnExcluir" Content="🗑 Excluir Selecionado"
                            Width="220" Height="50" Margin="10,0"
                            Background="#E65A5A" Foreground="White"
                            FontSize="16" Click="btnExcluir_Click"/>

                    <Button x:Name="btnVoltar" Content="↩ Voltar"
                            Width="180" Height="50" Margin="10,0"
                            Background="#73D673" Foreground="White"
                            FontSize="16" Click="btnVoltar_Click"/>
                    
                </StackPanel>

                <!-- Valor Total -->
                <TextBlock x:Name="txtValorTotal" 
                           Text="R$ 0,00" 
                           FontWeight="Bold" 
                           FontSize="18" 
                           Margin="10"
                           HorizontalAlignment="Center"
                           Foreground="#333"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
