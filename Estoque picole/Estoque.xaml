<Page x:Class="Estoque_picole.EstoqueVisualizacao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Estoque_picole"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EstoqueVisualizacao"
      Background="#FFF0F0F0">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnVoltar"
                    Content="⟵ Voltar"
                    Width="180"
                    Height="60"
                    Background="#FF73D673"
                    Foreground="White"
                    FontSize="24"
                    FontWeight="Bold"
                    BorderThickness="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="btnVoltar_Click"/>

            <TextBlock Grid.Column="1"
                       Text="Estoque de Picolés"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="#223244"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <DataGrid x:Name="dgEstoque"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  FontSize="24"
                  RowHeight="50">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="2*"/>
                <DataGridTextColumn Header="Sabor" Binding="{Binding Sabor}" Width="*"/>
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="*"/>
                <DataGridTextColumn Header="Preço" Binding="{Binding Preco}" Width="*"/>
                <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal}" Width="*"/>
                <DataGridTextColumn Header="Validade" Binding="{Binding Validade, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
