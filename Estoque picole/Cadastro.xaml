<Page x:Class="Estoque_picole.Cadastro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Estoque_picole"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Cadastro"
      Background="#FFF0F0F0">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

       
        <TextBlock Text="🍦 Cadastro de Picolés"
                   FontSize="60"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,40"/>

        <Grid Grid.Row="1" Margin="50,0,50,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="30">
                <TextBlock Text="Nome do Produto:" FontWeight="SemiBold" FontSize="24" Margin="0,0,0,10"/>
                <TextBox x:Name="txtNome" Height="60" FontSize="24" Margin="0,0,0,30"/>

                <TextBlock Text="Sabor:" FontWeight="SemiBold" FontSize="24" Margin="0,0,0,10"/>
                <TextBox x:Name="txtSabor" Height="60" FontSize="24" Margin="0,0,0,30"/>

                <TextBlock Text="Quantidade:" FontWeight="SemiBold" FontSize="24" Margin="0,0,0,10"/>
                <TextBox x:Name="txtQuantidade" Height="60" FontSize="24" Margin="0,0,0,30"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="30">
                <TextBlock Text="Preço Unitário:" FontWeight="SemiBold" FontSize="24" Margin="0,0,0,10"/>
                <TextBox x:Name="txtPreco" Height="60" FontSize="24" Margin="0,0,0,30"/>

                <TextBlock Text="Data de Validade:" FontWeight="SemiBold" FontSize="24" Margin="0,0,0,10"/>
                <DatePicker x:Name="dpValidade" Height="60" FontSize="24" Margin="0,0,0,30"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,50">
            <Button x:Name="btnSalvar"
                    Content="💾 Salvar"
                    Width="250" Height="80"
                    Background="#5AAFE4"
                    Foreground="White"
                    FontSize="28"
                    FontWeight="SemiBold"
                    Margin="20,0"
                    Click="btnSalvar_Click"/>

            <Button x:Name="btnVoltar"
                    Content="↩ Voltar"
                    Width="250" Height="80"
                    Background="#8FD26D"
                    Foreground="White"
                    FontSize="28"
                    FontWeight="SemiBold"
                    Margin="20,0"
                    Click="btnVoltar_Click_1"/>
        </StackPanel>
    </Grid>
</Page>
